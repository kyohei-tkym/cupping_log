<h2><%= @user.name %>'s Profile</h2>
<div class="edit-profile"><%= link_to "Edit", edit_user_path(@user) %></div>
<div class="profile-details">
  <div class="profile-icon">
    <%= attachment_image_tag @user, :profile_image, :fill, 200, 200, fallback: "img/no_image.jpg"%>
  </div>
  <h3 class="profile-text"><%= @user.name %></h3>
  <div class="profile-introduction">
    <P>自己紹介</P>
    <%= @user.introduction %>
  </div>
</div>
<% if current_user.following?(@user) %>
  <%= link_to "Unfollow", user_relationships_path(@user.id), method: :delete %>
<% else %>
  <%= link_to "Follow", user_relationships_path(@user.id), method: :post %>
<% end %>
<%= render 'logs/log-index', logs: @logs %>
