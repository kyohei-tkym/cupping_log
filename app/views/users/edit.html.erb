<div class="edit-profile-form">
  <h2 class="edit-profile-title">プロフィール編集</h2>
  <%= form_with model:@user, local:true do |f| %>
  <div class="form-detail">
    <%= f.label :"ユーザーネーム"%>
    <%= f.text_field :name, autofocus: true, placeholder:"ユーザーネームを入力"%>
  </div>

  <div class="form-detail">
    <%= f.label :"プロフィール画像" %>
    <%= attachment_image_tag @user, :profile_image, :fill, 400, 400, fallback: "img/no_image.jpg" %>
    <%= f.attachment_field :profile_image %>
  </div>
  
  <div class="form-detail">
    <%= f.label :"自己紹介" %>
    <%= f.text_area :introduction, autofocus: true, placeholder:"自由に記入してください" %>
  </div>
  
  <div class="form-detail">
    <%= f.submit "変更を保存", class:"form-input" %>
  </div>
  <% end %>
</div>