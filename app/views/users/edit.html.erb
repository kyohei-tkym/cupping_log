<div class="container">
  <h2 class="pt-5">プロフィール編集</h2>
  <%= form_with model:@user, local:true do |f| %>
  <div class="form-group">
    <%= f.label :"ユーザーネーム"%>
    <%= f.text_field :name, autofocus: true, placeholder:"ユーザーネームを入力", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :"プロフィール画像" %>
    <%= f.attachment_field :profile_image, class:"form-control-file pb-3" %>
    <%= attachment_image_tag @user, :profile_image, :fill, 200, 200, fallback: "no_image.jpg" %>
  </div>

  <div class="form-group">
    <%= f.label :"自己紹介" %>
    <%= f.text_area :introduction, autofocus: true, placeholder:"自由に記入してください", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "変更を保存", class:"btn btn-success" %>
  </div>
  <% end %>
</div>
