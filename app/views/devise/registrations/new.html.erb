<div class="container p-5">
<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :"ユーザーネーム" %><br />
    <%= f.text_field :name, autofocus: true, placeholder:"ユーザーネームを入力", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレスを入力", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :"パスワード" %>
    <% if @minimum_password_length %>
    <em>(半角英数 <%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"パスワードを入力", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :"もう一度パスワードを入力" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"確認の為、もう一度入力", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :"プロフィール画像" %></br>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class:"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する", class:"btn btn-success mb-2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
