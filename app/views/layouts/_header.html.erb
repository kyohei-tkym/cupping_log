<header class="shadow rounded">
  <nav class="navbar navbar-expand-lg navbar-dark " style="background-color: #8b4513;">
    <%= link_to "Cupping Log", root_path, class:"navbar-brand" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <% if user_signed_in? %>
                <li class="nav-item">
                    <%= link_to "My page", user_path(current_user.id), class:"nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "Log一覧", logs_path, class:"nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "Logを書く", new_log_path, class:"nav-link" %>
                </li>
                <li class="nav-item">
                    <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"nav-link" %>
                </li>
             <% else %>
                <li class="nav-item">
                    <%= link_to "ログイン", new_user_session_path, class:"nav-link" %>
                </li>
                <li class="nav-item">
                   <%= link_to "新規登録", new_user_registration_path, class:"nav-link" %>
                </li>
            <% end %>
        </ul>
    </div>
    <div class="d-flex">
      <% if user_signed_in? %>
        <%= form_with url:search_path, method: :get, local: true do |f| %>
          <%= f.select 'search[model]', options_for_select({ "ユーザーネームで検索" => "user", "コーヒーの名前で検索" => "log" }), class:"p-1" %>
          <%= f.text_field 'search[value]', class:"p-1 m-1" %>
          <%= f.submit :"検索", class:"p-1 m-1" %>
        <% end %>
      <% end %>
    </div>
  </nav>
</header>